@{
  ViewData["Title"] = "not too salty";
}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta
      name="viewport"
      content="width=device-width,initial-scale=1,shrink-to-fit=no"
    />
    <meta name="theme-color" content="#000000" />
    <link href="https://unpkg.com/material-components-web@latest/dist/material-components-web.min.css" rel="stylesheet">
    <script src="https://unpkg.com/material-components-web@latest/dist/material-components-web.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="~/css/styles.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">

    <title>@ViewData["Title"]</title>
  </head>
  <body class="mdc-typography">
    <noscript>You need to enable JavaScript to run this app.</noscript>
    <div id="root">
      <div class="drawer-frame-root">
        <aside class="mdc-drawer mdc-drawer--modal">
          <div class="mdc-drawer__header">
            <h3 class="mdc-drawer__title">not too salty</h3>
            <h6 class="mdc-drawer__subtitle">make food, not war</h6>
          </div>
          <div class="mdc-drawer__content">
            <nav class="mdc-list">
              <a
                class="mdc-list-item mdc-list-item--activated"
                href="https://material-components.github.io/material-components-web-catalog/#"
                tabindex="0"
                aria-selected="true"
              >
                <i
                  class="material-icons mdc-list-item__graphic"
                  aria-hidden="true"
                >
                  home</i
                >Home</a
              >
              <hr class="mdc-list-divider" />
              <h6 class="mdc-list-group__subheader">Genres</h6>
              <a
                class="mdc-list-item"
                href="https://material-components.github.io/material-components-web-catalog/#"
                tabindex="-1"
              >
                <i
                  class="material-icons mdc-list-item__graphic"
                  aria-hidden="true"
                  >menu_book</i
                >Breakfast</a
              ><a
                class="mdc-list-item"
                href="https://material-components.github.io/material-components-web-catalog/#"
                tabindex="-1"
                ><i
                  class="material-icons mdc-list-item__graphic"
                  aria-hidden="true"
                  >menu_book</i
                >Lunch</a
              ><a
                class="mdc-list-item"
                href="https://material-components.github.io/material-components-web-catalog/#"
                tabindex="-1"
                ><i
                  class="material-icons mdc-list-item__graphic"
                  aria-hidden="true"
                  >menu_book</i
                >Dinner</a
              >
              <a
                class="mdc-list-item"
                href="https://material-components.github.io/material-components-web-catalog/#"
                tabindex="-1"
                ><i
                  class="material-icons mdc-list-item__graphic"
                  aria-hidden="true"
                  >menu_book</i
                >Dessert</a
              >
            </nav>
          </div>
        </aside>
        <div class="mdc-drawer-scrim"></div>
        <div class="drawer-frame-app-content">
          <header class="mdc-top-app-bar drawer-top-app-bar">
            <div class="mdc-top-app-bar__row">
              <section
                class="mdc-top-app-bar__section mdc-top-app-bar__section--align-start"
              >
                <button
                  class="mdc-icon-button material-icons mdc-top-app-bar__navigation-icon mdc-ripple-upgraded--unbounded mdc-ripple-upgraded"
                  style="
                    --mdc-ripple-fg-size: 28px;
                    --mdc-ripple-fg-scale: 1.71379;
                    --mdc-ripple-left: 10px;
                    --mdc-ripple-top: 10px;
                  "
                >
                  menu</button
                ><span class="mdc-top-app-bar__title">@ViewData["Title"]</span>
              </section>
            </div>
          </header>
          <div class="drawer-main-content">
            <div class="mdc-top-app-bar--fixed-adjust"></div>
              @RenderBody()
          </div>
        </div>
      </div>

      <div class="mdc-layout-grid">
        <div class="mdc-layout-grid__inner">
          <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4">
            <h5 class="title font-bold">Quick Links</h5>
            <p>Here you can find the most recent additions to each category.</p>
          </div>
          <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-2">
            <h5 class="title font-bold">Breakfast</h5>
            <ul>
                <li><a href="#!">Link 1</a></li>
                <li><a href="#!">Link 2</a></li>
                <li><a href="#!">Link 3</a></li>
                <li><a href="#!">Link 4</a></li>
            </ul>
          </div>
          <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-2">
            <h5 class="title font-bold">Lunch</h5>
            <ul>
                <li><a href="#!">Link 1</a></li>
                <li><a href="#!">Link 2</a></li>
                <li><a href="#!">Link 3</a></li>
                <li><a href="#!">Link 4</a></li>
            </ul>
          </div>
          <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-2">
            <h5 class="title font-bold">Dinner</h5>
            <ul>
                <li><a href="#!">Link 1</a></li>
                <li><a href="#!">Link 2</a></li>
                <li><a href="#!">Link 3</a></li>
                <li><a href="#!">Link 4</a></li>
            </ul>
          </div>
          <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-2">
            <h5 class="title font-bold">Dessert</h5>
            <ul>
                <li><a href="#!">Link 1</a></li>
                <li><a href="#!">Link 2</a></li>
                <li><a href="#!">Link 3</a></li>
                <li><a href="#!">Link 4</a></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12 centered-text background-dark-grey padded-out">
            Â© 2020 Copyright: <a href="https://www.MDBootstrap.com"> MDBootstrap.com </a>
      </div>
    </div>
    <script>
    const drawer = mdc.drawer.MDCDrawer.attachTo(document.querySelector('.mdc-drawer'));

const topAppBar = mdc.topAppBar.MDCTopAppBar.attachTo(document.querySelector('.mdc-top-app-bar'));
topAppBar.setScrollTarget(document.querySelector('.drawer-main-content'));
topAppBar.listen('MDCTopAppBar:nav', () => {
  drawer.open = !drawer.open;
});
    </script>
  </body>
</html>
